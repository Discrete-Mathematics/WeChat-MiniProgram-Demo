.container {  
  background-color: white;  
  padding: 20rpx;  
}  

.header {  
  text-align: center;  
  margin-bottom: 30rpx;  
}  

.header-title {  
  font-size: 32rpx;  
  font-weight: bold;  
}  

.info-section {  
  margin: 20rpx 0;  
}  

.info-item {  
  display: flex;  
  justify-content: space-between;  
  padding: 10rpx 0;  
  border-bottom: 1rpx solid #ccc;  
}  

.label {  
  font-size: 28rpx;  
  color: #333;  
}  

.value {  
  font-size: 28rpx;  
  color: #666;  
}  

.logout-button {  
  margin-top: 30rpx;  
  background-color: #e74c3c;  
  color: white;  
  padding: 10rpx 0;  
  text-align: center;  
  border-radius: 5rpx;  
}